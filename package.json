{
  "name": "lyricglow",
  "version": "0.2.10",
  "description": "Real-time synchronized lyrics and music metadata display for macOS.",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "ELECTRON_ENABLE_LOGGING=1 electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "release": "bash scripts/release.sh"
  },
  "keywords": [
    "lyrics",
    "synchronized-lyrics",
    "music",
    "now-playing",
    "spotify",
    "apple-music",
    "electron",
    "macos",
    "music-player",
    "lyrics-display",
    "real-time-lyrics",
    "spotify-lyrics",
    "music-metadata",
    "artist-info",
    "album-artwork",
    "rtl-support",
    "persian-lyrics",
    "arabic-lyrics",
    "multilingual"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@fontsource/inter": "^5.2.8",
    "electron": "^33.1.0",
    "electron-builder": "^25.1.8",
    "vazirmatn": "^33.0.3"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-store": "^10.0.0",
    "node-fetch": "^2.7.0"
  }
