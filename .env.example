# ==========================================
# LyricGlow - Environment Variables
# ==========================================
# Copy this file to .env and fill in your own values

# ==========================================
# API Keys
# ==========================================

# TheAudioDB API Key (Free public test key - safe to use)
AUDIODB_API_KEY=523532

# Spotify Client ID (Required for Top Tracks & Albums features)
# Get your own from: https://developer.spotify.com/dashboard
# Redirect URI must be: musicdisplay://callback
SPOTIFY_CLIENT_ID=your_spotify_client_id_here


# ==========================================
# Display Settings (Optional - defaults shown)
# ==========================================

# Maximum number of artist images to display in carousel
MAX_ARTIST_IMAGES=8

# Maximum number of top tracks to show (Spotify only)
MAX_TOP_TRACKS=5

# Maximum number of top albums to show (Spotify only)
MAX_TOP_ALBUMS=4

# Maximum number of similar artists to display
MAX_SIMILAR_ARTISTS=5

# Character limit for artist biography preview
BIO_CHAR_LIMIT=300

# Image quality from APIs (small, medium, large, extralarge)
IMAGE_QUALITY=extralarge

# Cache duration in hours (7 days = 168 hours)
CACHE_DURATION_HOURS=168
